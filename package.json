{
    "name": "node-starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "lint": "eslint . --ext .ts",
        "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "start:dev": "nodemon",
        "start": "npm run build && node build/index.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --config .prettierrc --write"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^14.6.4",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.3.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    }
}
